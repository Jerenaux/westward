// https://github.com/lorenwest/node-config/wiki/Configuration-Files
{
   battle: {
        enabled: true,
        aggroRange: 12, // chebyshev distance; TODO: variable?
        battleRange: 3, // distance that can be travelled in one turn in battle; TODO: variable
        freezeNPC: false,
        maxDamage: 10000,
        minDamage: 1,
        rangePenalty: 1, // accuracy penalty per tile
        turnDuration: 5, // seconds
        tickRate: 100, // milliseconds, granularity of battle updates
        throwableSpeed: 10, // tiles/sec
        arrowSpeed: 30, // tiles/sec
        bombSpeed: 10,
        meleeAtkDelay: 500,
        rangedAtkDelay: 500
   },
   buildings: {
        autobuild: true,
        canfight: true,
        nobuildings: false,
        inventorySize: 100,
        maxGold: 99999
   },
   classes: {
        soldier: 0,
        merchant: 1,
        craftsman: 2,
        explorer: 3
   },
   character: {
        variables: { // Default starting values
            def: 7,
            dmg: 19,
            hpmax: 300
        },
        maxClassLvl: 101,
        maxClassXP: 999999,
        maxGold: 100000,
        foodConsumption: 1.5,
        steps: 50, // number of steps to make to lose `stepLoss` points of vigor
        stepsLoss: 1 // amount of vigor lost after walking `steps` steps
   },
   economyCycles: {
        // Unit: seconds
        turnDuration: 1,
        // Unit: turns
        turns: {
            camps: 5,
            foodConsumptionRate: 600, // rate at which food levels of players are decreased ; amount in character.foodConsumption
            itemsRespawn: 86400, // 86400sec = 24h
            restRate: 1, // rate at which vigor levels of players are increased when sheltered ; amount in buildings.json
            spawnZones: 10
        }
    },
    misc: {
        foodID: 1,
        performInit: true
    },
    pathfinding: {
        walkingSpeed: 5, // tiles/sec
        maxPathLength: 36,
        battleRange: 3
    },
    updateRates: {
            // Unit: ms
            client: 125,
            walk: 50,
            wander: 200,
            aggro: 1500
    },
    civs: {
        aggro: false,
        wander: true,
        raidMinimum: 8
    },
    wildlife: {
        aggro: true,
        nolife: false,
        wander: true,
        wanderRange: 5,
        idleTime: [1, 3.5], // random bounds; in seconds
        idleRetry: 200 // ms
    },
    dev: {
        mapsPath: '/../../maps' // relative to tools directory
    },
    client: {
        boot:{
            autoBoot: true,
            forceNewPlayer: false,
            offerTutorial: true
        },
        config: { // Will be in Engine.config
            chatTimeout: 5000, //ms
            notificationTimeout: 3000, //ms ; TODO: adapt based on length?
            hearingDistance: 30, // tiles
            defaultBuildRecipes: [3,4,6,11,2] // workshop, shop, lumbercamp, shack
        }
    }
}
